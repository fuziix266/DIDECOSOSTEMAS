  <script>
    $(document).ready(function() {

      // Observar cambios dentro del div contenedor

      const targetNode = document.querySelector('.sonic_art');



      const observer = new MutationObserver(function(mutationsList) {

        mutationsList.forEach(function(mutation) {

          if (mutation.type === 'childList') {

            $('.sonic_art img')

              .hide() // primero oculta

              .css({

                width: '200px',

                height: '200px',

                'object-fit': 'cover',

                display: 'block'

              })

              .fadeIn(1500); // luego aparece suavemente

          }

        });

      });



      observer.observe(targetNode, {

        childList: true,

        subtree: true

      });

    });
  </script>

