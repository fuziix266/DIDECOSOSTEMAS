            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .contact-card {
            background: #1c1c1c;
            border-radius: 20px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .recinto {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #00e0ff;
        }

        .encargado {
            font-size: 1rem;
            margin-bottom: 15px;
            color: #ccc;
        }

        .custom-contact-button {
            display: flex;
            align-items: stretch;
            text-decoration: none;
            height: 60px;
            width: 100%;
            max-width: 100%;
            transition: transform 0.3s ease;
        }

        .custom-contact-button:hover {
            transform: scale(1.01);
        }

        .btn-part {
            display: block;
            height: 100%;
            object-fit: contain;
        }

        .btn-part.left {
            flex-shrink: 0;
        }

        .btn-part.right {
            flex-shrink: 0;
        }

        .btn-text {
            flex-grow: 1;
            background-color: white;
            color: #000;
            font-weight: bold;
            font-size: 1rem;
            display: flex;
            align-items: center;
            white-space: nowrap;
            height: 100%;
            padding: 0 10px;
            justify-content: center;
        }
    </style>
</head>

