    <script>
        // Script de compatibilidad Bootstrap 4 -> Bootstrap 5
        document.addEventListener('DOMContentLoaded', function() {
            // Convertir data-toggle a data-bs-toggle
            const toggleElements = document.querySelectorAll('[data-toggle="collapse"]');
            toggleElements.forEach(element => {
                element.setAttribute('data-bs-toggle', 'collapse');
                element.removeAttribute('data-toggle');
            });

            // Convertir data-target a data-bs-target
            const targetElements = document.querySelectorAll('[data-target]');
            targetElements.forEach(element => {
                const target = element.getAttribute('data-target');
                if (target) {
                    element.setAttribute('data-bs-target', target);
                    element.removeAttribute('data-target');
                }
            });

            // Convertir data-parent a data-bs-parent
            const parentElements = document.querySelectorAll('[data-parent]');
            parentElements.forEach(element => {
                const parent = element.getAttribute('data-parent');
                if (parent) {
                    element.setAttribute('data-bs-parent', parent);
                    element.removeAttribute('data-parent');
                }
            });
        });
    </script>

    <script>
        let autoReturnTimer;
        let confirmationTimer;

        function startAutoReturnTimer() {
            clearTimeout(autoReturnTimer);
            clearTimeout(confirmationTimer);

            autoReturnTimer = setTimeout(() => {
                showConfirmationPrompt();
            }, 4 * 60 * 1000); //4 minutos
        }

        function showConfirmationPrompt() {
            let secondsLeft = 20;

            const timerInterval = setInterval(() => {
                secondsLeft--;
                if (secondsLeft <= 0) {
                    clearInterval(timerInterval);
                }
            }, 1000);

            Swal.fire({
                title: '¿Necesitas más tiempo?',
                html: 'Estamos aquí para ayudarte.<br><strong>Volveremos a la página principal en 10 segundos.</strong>',
                icon: 'info',
                showCancelButton: false,
                showConfirmButton: true,
                confirmButtonText: 'Sí, estoy aquí',
                allowOutsideClick: false,
                allowEscapeKey: false,
                timer: 20000,
                timerProgressBar: true,
                didOpen: () => {
                    // iniciar conteo de redirección
                    confirmationTimer = setTimeout(() => {
                        window.location.href = "/didecosistemas/public/";
                    }, 10000);
                },
                willClose: () => {
                    clearTimeout(confirmationTimer);
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    startAutoReturnTimer(); // usuario está activo
                }
            });
        }

        // Detectar actividad para reiniciar contador
        ["mousemove", "mousedown", "keydown", "touchstart"].forEach(evt => {
            document.addEventListener(evt, startAutoReturnTimer);
        });

        // Iniciar al cargar
        startAutoReturnTimer();
    </script>

