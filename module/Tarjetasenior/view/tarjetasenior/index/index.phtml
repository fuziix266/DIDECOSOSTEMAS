<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Tarjeta Senior</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .video-container {
            width: 240px;
            height: 300px;
            overflow: hidden;
            position: relative;
            margin: auto;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            background: black;
        }

        video {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(90deg) scale(1);
            transform-origin: center center;
            transition: transform 0.2s ease;
        }

        #previewFoto {
            width: 100%;
            max-width: 300px;
            border: 1px solid #ccc;
            margin-bottom: 1rem;
        }

        #canvas {
            display: none;
        }

        .credencial {
            width: 240px;
            height: 400px;
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            background-size: cover;
            background-position: center;
            position: relative;
            border: 2px solid #333;
            border-radius: 10px;
            margin-top: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .credencial .foto {
            position: absolute;
            top: 120px;
            left: 60px;
            width: 200px;
            height: 240px;
            object-fit: cover;
            border: 2px solid #000;
            border-radius: 5px;
        }

        .credencial .nombre,
        .credencial .rut {
            position: absolute;
            width: 100%;
            text-align: center;
            font-weight: bold;
            font-size: 18px;
            color: #202060;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
        }

        .credencial .nombre {
            bottom: 90px;
        }

        .credencial .rut {
            bottom: 60px;
        }

        .camera-status {
            padding: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 0.25rem;
            font-weight: bold;
        }

        .camera-ready {
            background-color: #d1edff;
            color: #0c63e4;
            border: 1px solid #0c63e4;
        }

        .camera-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #721c24;
        }

        .camera-waiting {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #856404;
        }

        .debug-info {
            font-size: 12px;
            color: #666;
            margin-top: 0.5rem;
        }

        .btn-lg {
            padding: 1rem;
            font-size: 1.1rem;
            min-height: 70px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .zoom-icon {
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }
    </style>
</head>

<body class="bg-light p-4">

    <div class="container-fluid">
        <div class="row">

            <!-- Formulario + C√°mara -->
            <div class="col-md-6">
                <h3 class="mb-3">Formulario Tarjeta Senior</h3>
                <form id="formulario">
                    <div class="mb-2">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" required>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="apellido" required>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">RUT</label>
                        <input type="text" class="form-control" name="rut" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fecha de nacimiento</label>
                        <input type="date" class="form-control" name="fecha_nacimiento" required>
                    </div>

                    <div class="mb-3">
                        <button type="button" class="btn btn-warning me-2" id="btnReiniciar" onclick="reiniciarCamera()" style="display:none;">
                            Reiniciar C√°mara
                        </button>
                        <button type="submit" class="btn btn-success">Generar Credencial</button>
                    </div>
                </form>

                <div id="cameraStatus" class="camera-status camera-waiting">
                    Inicializando c√°mara...
                </div>

                <div class="video-container">
                    <video id="video" autoplay playsinline muted></video>
                </div>
                <canvas id="canvas"></canvas>

                <!-- Controles de Zoom -->
                <div class="mb-3">
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <button type="button" class="btn btn-outline-primary btn-lg w-100" id="btnZoomOut" onclick="disminuirZoom()" disabled>
                                <span class="zoom-icon">üîç‚ûñ</span>
                                <span style="font-size: 0.9rem;">Alejar</span>
                            </button>
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-outline-primary btn-lg w-100" id="btnZoomIn" onclick="aumentarZoom()" disabled>
                                <span class="zoom-icon">üîç‚ûï</span>
                                <span style="font-size: 0.9rem;">Acercar</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="button" class="btn btn-primary btn-lg w-100" id="btnCapturar" onclick="capturarFoto()" disabled>
                                <span id="btnTexto">üì∏ Inicializando c√°mara...</span>
                            </button>
                        </div>
                    </div>
                    <div class="text-center mt-2">
                        <span id="zoomValue" class="badge bg-secondary">Zoom: 1.0x</span>
                    </div>
                </div>

                <img id="previewFoto" class="d-none" alt="Foto capturada">

                <div id="debugInfo" class="debug-info"></div>
            </div>

            <!-- Vista de la credencial -->
            <div class="col-md-6">
                <h3 class="mb-3">Vista Previa de Credencial</h3>
                <div id="credencialPreview"></div>
            </div>

        </div>
    </div>

    <script>
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const preview = document.getElementById('previewFoto');
        const btnCapturar = document.getElementById('btnCapturar');
        const btnTexto = document.getElementById('btnTexto');
        const cameraStatus = document.getElementById('cameraStatus');
        const debugInfo = document.getElementById('debugInfo');
        let fotoBase64 = '';
        let stream = null;
        let zoomActual = 0.5;

        function mostrarEstado(mensaje, tipo) {
            cameraStatus.textContent = mensaje;
            cameraStatus.className = `camera-status ${tipo}`;
        }

        function actualizarDebug() {
            const info = `
      Video original: ${video.videoWidth}x${video.videoHeight}<br>
      Canvas rotado: ${video.videoHeight}x${video.videoWidth}<br>
      Zoom actual: ${zoomActual.toFixed(1)}x<br>
      Video ready state: ${video.readyState}<br>
      Video paused: ${video.paused}<br>
      Video current time: ${video.currentTime.toFixed(2)}s<br>
      Stream active: ${stream ? stream.active : 'null'}<br>
      <small><em>Nota: La c√°mara est√° rotada 90¬∞ para formato vertical</em></small>
    `;
            debugInfo.innerHTML = info;
        }

        function aplicarZoomVisual() {
            const rotacion = 'rotate(90deg)';
            const escala = `scale(${zoomActual})`;
            video.style.transform = `translate(-50%, -50%) ${rotacion} ${escala}`;
            document.getElementById('zoomValue').textContent = `Zoom: ${zoomActual.toFixed(1)}x`;
        }


        function aumentarZoom() {
            if (zoomActual < 3.0) {
                zoomActual += 0.1;
                zoomActual = Math.round(zoomActual * 10) / 10;
                aplicarZoomVisual();
            }
        }

        function disminuirZoom() {
            if (zoomActual > 0.5) {
                zoomActual -= 0.1;
                zoomActual = Math.round(zoomActual * 10) / 10;
                aplicarZoomVisual();
            }
        }

        async function inicializarCamera() {
            try {
                mostrarEstado('Solicitando acceso a la c√°mara...', 'camera-waiting');

                stream = await navigator.mediaDevices.getUserMedia({
                    video: true
                });
                video.srcObject = stream;
                mostrarEstado('C√°mara conectada, esperando inicializaci√≥n...', 'camera-waiting');

                video.addEventListener('loadedmetadata', () => {
                    mostrarEstado('‚úì C√°mara lista para capturar', 'camera-ready');
                    btnCapturar.disabled = false;
                    btnZoomIn.disabled = false;
                    btnZoomOut.disabled = false;
                    btnTexto.textContent = 'üì∏ Tomar Foto';
                    aplicarZoomVisual();
                    actualizarDebug();
                });

                setInterval(actualizarDebug, 2000);
            } catch (error) {
                console.error('Error al inicializar c√°mara:', error);
                mostrarEstado(`Error: ${error.message}`, 'camera-error');
                btnTexto.textContent = '‚ùå Error en c√°mara';
            }
        }

        function capturarFoto() {
            try {
                if (video.videoWidth === 0 || video.videoHeight === 0) {
                    throw new Error('Video no tiene dimensiones v√°lidas. Espera un momento m√°s.');
                }

                canvas.width = video.videoHeight;
                canvas.height = video.videoWidth;
                ctx.clearRect(0, 0, canvas.width, canvas.height);

                ctx.save();
                ctx.translate(canvas.width / 2, canvas.height / 2);
                ctx.scale(zoomActual, zoomActual);
                ctx.rotate(Math.PI / 2);
                ctx.drawImage(video, -video.videoWidth / 2, -video.videoHeight / 2);
                ctx.restore();

                const anchoCorte = Math.min(240, canvas.width);
                const altoCorte = Math.min(300, canvas.height);
                const x = Math.max(0, (canvas.width / 2) - (anchoCorte / 2));
                const y = Math.max(0, (canvas.height / 2) - (altoCorte / 2));
                const croppedImageData = ctx.getImageData(x, y, anchoCorte, altoCorte);

                const tmpCanvas = document.createElement('canvas');
                tmpCanvas.width = anchoCorte;
                tmpCanvas.height = altoCorte;
                const tmpCtx = tmpCanvas.getContext('2d');
                tmpCtx.putImageData(croppedImageData, 0, 0);

                fotoBase64 = tmpCanvas.toDataURL('image/jpeg', 0.8);
                preview.src = fotoBase64;
                preview.classList.remove('d-none');

                mostrarEstado(`‚úì Foto capturada (zoom: ${zoomActual.toFixed(1)}x)`, 'camera-ready');
                console.log('Foto capturada correctamente');
            } catch (error) {
                console.error('Error al capturar foto:', error);
                mostrarEstado(`Error al capturar: ${error.message}`, 'camera-error');
                alert(`Error al capturar foto: ${error.message}`);
            }
        }

        document.getElementById('formulario').addEventListener('submit', function(e) {
            e.preventDefault();

            if (!fotoBase64) {
                alert("Primero debes capturar una foto.");
                return;
            }

            const form = new FormData(this);
            const nombre = form.get('nombre');
            const apellido = form.get('apellido');
            const rut = form.get('rut');

            const credencialHTML = `
      <div class="credencial">
        <img src="${fotoBase64}" class="foto" alt="Foto del beneficiario">
        <div class="nombre">${nombre} ${apellido}</div>
        <div class="rut">${rut}</div>
      </div>
    `;

            document.getElementById('credencialPreview').innerHTML = credencialHTML;
        });

        window.addEventListener('load', inicializarCamera);

        window.addEventListener('beforeunload', () => {
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }
        });
    </script>


</body>

</html>