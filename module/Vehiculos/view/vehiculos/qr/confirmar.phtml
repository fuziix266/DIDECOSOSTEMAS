<script>
// Auto-focus en el input de código
document.getElementById('codigo').focus();

// Solo permitir números
document.getElementById('codigo').addEventListener('input', (e) => {
    e.target.value = e.target.value.replace(/[^0-9]/g, '');
});

// Auto-submit cuando se completen 6 dígitos
document.getElementById('codigo').addEventListener('input', (e) => {
    if (e.target.value.length === 6) {
        document.getElementById('formConfirmar').dispatchEvent(new Event('submit'));
    }
});

// Validar formulario
document.getElementById('formConfirmar').addEventListener('submit', (e) => {
    if (!e.target.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
        e.target.classList.add('was-validated');
        return;
    }
    
    const codigo = document.getElementById('codigo').value;
    if (codigo.length !== 6) {
        e.preventDefault();
        APP.Utils.showAlert('Error', 'El código debe tener 6 dígitos', 'error');
    }
});

// Reenviar código
async function reenviarCodigo() {
    const confirmado = await APP.Utils.showConfirm(
        'Reenviar Código',
        '¿Deseas recibir un nuevo código de confirmación?'
    );
    
    if (confirmado) {
        const uuid = '<?= $this->escapeJs($uuid) ?>';
        const baseUrl = '<?= $this->escapeJs($baseUrl) ?>';
        window.location.href = `${baseUrl}/qr/${uuid}/solicitar-correo`;
    }
}
</script>
